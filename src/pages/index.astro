---
const getData = async () => {
	const res = await fetch(`${import.meta.env.SITE}/api/days`);
	return (await res.json()) as { said: number; lastStream: number };
};
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Días desde que Midzui</title>
	</head>
	<body>
		<h1>Días desde que Midzui</h1>
		<div class="elements">
			<h2 class="dijo title">Dijo que<br />volvía para siempre</h2>
			<p class="dijo element">{(await getData()).said}</p>
			<h2 class="stream title">Hizo stream</h2>
			<p class="stream element">{(await getData()).lastStream}</p>
		</div>
	</body>
</html>

<style>
	body {
		width: 100dvw;
		height: 100dvh;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background-color: #ad8dda;
		color: #fff;
		margin: 0;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
			Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
			sans-serif;
	}

	h1 {
		font-size: 3rem;
		margin-bottom: 6rem;
	}

	.elements {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		grid-template-rows: 4rem 1fr;
		gap: 2rem;
	}

	.title {
		font-size: larger;
		text-align: center;
		grid-row: 1 / 2;
		margin: 0;
		margin-top: auto;
		margin-bottom: auto;
		padding-left: 1rem;
		padding-right: 1rem;
	}

	.element {
		font-size: 4rem;
		font-weight: 600;
		text-align: center;
		margin-top: 1rem;
		margin-bottom: 1rem;
	}
</style>
